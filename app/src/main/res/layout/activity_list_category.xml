<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".list_category">

    <ImageView
        android:onClick="back_aggCat"
        android:id="@+id/btn_back"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="10sp"
        android:layout_alignParentLeft="true"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:src="@drawable/back"/>

    <TextView
        android:id="@+id/textview_listcat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="LISTADO DE USUARIOS"
        android:textColor="#38FF00"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ListView
        android:layout_centerHorizontal="true"
        android:id="@+id/ListaCat"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/textview_listcat"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        />

</RelativeLayout>