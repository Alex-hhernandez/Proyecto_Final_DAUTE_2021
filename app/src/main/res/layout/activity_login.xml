<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <TextView
        android:id="@+id/lb_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_user"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_below="@id/lb_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/accountt" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/custom_email"
        android:drawablePadding="15sp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="12sp"
        android:paddingVertical="12sp"
        android:textColor="@color/white"
        android:textColorHint="#B1A8A8"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/custom_lock"
        android:drawablePadding="15sp"
        android:hint="******"
        android:inputType="textPassword"
        android:paddingHorizontal="12sp"
        android:paddingVertical="12sp"
        android:textColor="@color/white"
        android:textColorHint="#B1A8A8"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rec_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password"
        android:layout_marginTop="24sp"
        android:gravity="center_horizontal"
        android:text="Olvide mi ContraseÃ±a"
        android:textColor="#00FF0A"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_getstarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:backgroundTint="#079F0D"
        android:paddingHorizontal="48sp"
        android:paddingVertical="18sp"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="12sp" />

</RelativeLayout>