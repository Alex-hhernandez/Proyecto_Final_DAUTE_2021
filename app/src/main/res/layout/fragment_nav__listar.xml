<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    tools:context=".nav_Listar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="id del usuario"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:id="@+id/id_user"
                android:drawablePadding="15sp"
                android:layout_marginTop="20sp"
                android:layout_below="@id/textView1"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="Ingrese el id"
                android:textColorHint="#B1A8A8"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/custom_user"
                />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Nombre"
                android:layout_below="@id/id_user"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:id="@+id/et_des"
                android:drawablePadding="15sp"
                android:layout_marginTop="20sp"
                android:layout_below="@id/textView2"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="Ingrese el nombre"
                android:textColorHint="#B1A8A8"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/custom_user"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_des"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Apellidos"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_ap"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:hint="Ingrese los Apellidos"
                android:inputType="textPersonName"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Correo"
                android:layout_below="@id/et_ap"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_correo"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:hint="Ingrese correo"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_correo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Usuario"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_us"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:hint="Ingrese el usuario"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_us"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Clave"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_cla"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:hint="Ingrese la clave"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_cla"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Pregunta"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pre"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:hint="Ingrese pregunta"
                android:inputType="textPersonName"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pre"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Respuesta"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/res"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView8"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:hint="Ingrese respuesta"
                android:inputType="textPersonName"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/res"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Fecha de registro"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView9"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="yyyy-MM-dd:mm:ss"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView10"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/button"
                    android:layout_marginTop="20dp"
                    android:text="Nuevo Usuario" />
                <Button
                    android:id="@+id/btn_Ver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/button2"
                    android:layout_marginTop="20dp"
                    android:text="Ver Usuarios" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>