<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Edit_User">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:onClick="back_listUser"
                android:id="@+id/back_listUser"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/back"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                />

            <LinearLayout
                android:layout_marginTop="20sp"
                android:id="@+id/container_txtuser"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/accountt"
                    android:layout_marginRight="10sp"
                    />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Editar Usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_below="@id/container_txtuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="id del usuario"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/id_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:hint="Ingrese el id"
                android:inputType="textPersonName"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Nombre"
                android:layout_below="@id/id_edit"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:hint="Ingrese el nombre"
                android:inputType="textPersonName"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Apellidos"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ap_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:hint="Ingrese los Apellidos"
                android:inputType="textPersonName"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Correo"
                android:layout_below="@id/ap_edit"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/correo_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:hint="Ingrese correo"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/correo_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Usuario"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/us_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:hint="Ingrese el usuario"
                android:inputType="textPersonName"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/us_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Clave"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cla_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:hint="Ingrese la clave"
                android:inputType="textPersonName"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner1_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/cla_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:background="@drawable/custom_spinner"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner2_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner1_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:background="@drawable/custom_spinner"
                android:drawablePadding="15sp"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner2_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Pregunta"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pre_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:hint="Ingrese pregunta"
                android:inputType="textPersonName"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pre_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Respuesta"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/res_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView8"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawablePadding="15sp"
                android:hint="Ingrese respuesta"
                android:inputType="textPersonName"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/res_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Fecha de registro"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView9"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="yyyy-MM-dd:mm:ss"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/container_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView10"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20sp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Guardar" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/button"
                    android:backgroundTint="#FF0606"
                    android:layout_weight="1"
                    android:text="Borrar" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>