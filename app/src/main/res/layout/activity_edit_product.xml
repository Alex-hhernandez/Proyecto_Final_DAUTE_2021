<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Edit_Product">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:onClick="back_listUser"
                android:id="@+id/back_listUser"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/back"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="20sp"
                />

            <LinearLayout
                android:layout_below="@id/back_listUser"
                android:layout_marginTop="20sp"
                android:id="@+id/container_txtuser"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/product"
                    android:layout_gravity="center"
                    android:layout_marginRight="15sp"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Editar Producto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_txtuser"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Id del producto"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/idprod_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:clickable="true"
                android:drawablePadding="15sp"
                android:focusable="false"
                android:hint="Ingrese el id"
                android:inputType="textPersonName"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textIsSelectable="false"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idprod_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Nombre del producto"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nombreprod_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawableLeft="@drawable/note"
                android:drawablePadding="15sp"
                android:hint="Ingrese el nombre"
                android:inputType="textPersonName"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nombreprod_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Descripcion del producto"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/desprod_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawableLeft="@drawable/note"
                android:drawablePadding="15sp"
                android:hint="Ingrese la descripcion"
                android:inputType="textPersonName"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desprod_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Stock"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/stockprod_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawableLeft="@drawable/store"
                android:drawablePadding="15sp"
                android:hint="Ingrese la cantidad"
                android:inputType="number"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stockprod_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="PrÃ©cio del producto"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/precioprod_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawableLeft="@drawable/dollar"
                android:drawablePadding="15sp"
                android:hint="Ingrese el precio"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/precioprod_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Unidad de medida"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/uniprod_edit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_user"
                android:drawableLeft="@drawable/create"
                android:drawablePadding="15sp"
                android:hint="Ingrese la unidad de medida"
                android:inputType="number"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/uniprod_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:background="@drawable/custom_spinner"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:background="@drawable/custom_spinner"
                android:drawablePadding="15sp"
                android:paddingHorizontal="12sp"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textColorHint="#B1A8A8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="Fecha de registro"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView9"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:fontFamily="sans-serif"
                android:text="yyyy-MM-dd:mm:ss"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/container_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView10"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20sp"
                android:layout_marginHorizontal="2sp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Guardar"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="#238727"
                    android:paddingVertical="12sp"
                    app:cornerRadius="8sp"/>

                <Space
                    android:layout_width="15sp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/button"
                    android:backgroundTint="#FF0606"
                    android:layout_weight="1"
                    android:text="Borrar"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingVertical="12sp"
                    app:cornerRadius="8sp"/>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>